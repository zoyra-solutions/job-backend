{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost,1433;Database=Recruitment;User Id=sa;Password=YourStrong@Passw0rd;TrustServerCertificate=true;MultipleActiveResultSets=true;"
  },
  "JWT": {
    "Secret": "your-super-secret-jwt-key-change-this-in-production",
    "Issuer": "recruitment-platform",
    "Audience": "recruitment-platform-users",
    "ExpiryMinutes": 60,
    "RefreshExpiryDays": 7
  },
  "Redis": {
    "ConnectionString": "localhost:6379",
    "InstanceName": "Recruitment:"
  },
  "MinIO": {
    "Endpoint": "localhost:9000",
    "AccessKey": "minioadmin",
    "SecretKey": "minioadmin",
    "BucketName": "recruitment-files",
    "Secure": false
  },
  "RabbitMQ": {
    "Host": "localhost",
    "Username": "admin",
    "Password": "admin123",
    "VirtualHost": "/"
  },
  "Elasticsearch": {
    "Url": "http://localhost:9200",
    "IndexName": "recruitment"
  },
  "AI": {
    "CVParser": {
      "BaseUrl": "http://localhost:8001",
      "TimeoutSeconds": 30
    },
    "JobMatcher": {
      "BaseUrl": "http://localhost:8002",
      "TimeoutSeconds": 30
    }
  },
  "Payments": {
    "BankApiUrl": "https://api.bank.com",
    "ApiKey": "your-bank-api-key",
    "WebhookSecret": "your-webhook-secret",
    "SupportedBanks": [
      "Vietcombank",
      "Techcombank",
      "BIDV",
      "VietinBank",
      "ACB",
      "VPBank"
    ]
  },
  "Notifications": {
    "Firebase": {
      "ServerKey": "your-firebase-server-key",
      "ProjectId": "your-firebase-project-id"
    },
    "SMS": {
      "Provider": "Twilio",
      "AccountSid": "your-twilio-sid",
      "AuthToken": "your-twilio-token",
      "FromNumber": "+1234567890"
    },
    "Email": {
      "Provider": "SendGrid",
      "ApiKey": "your-sendgrid-key",
      "FromEmail": "noreply@yourplatform.com",
      "FromName": "Recruitment Platform"
    }
  },
  "Security": {
    "EncryptionKey": "your-256-bit-encryption-key-for-sensitive-data",
    "PasswordPolicy": {
      "MinLength": 8,
      "RequireUppercase": true,
      "RequireLowercase": true,
      "RequireNumbers": true,
      "RequireSpecialChars": true
    },
    "RateLimiting": {
      "LoginAttempts": 5,
      "WindowMinutes": 15,
      "LockoutMinutes": 30
    }
  },
  "Features": {
    "EnableAI": true,
    "EnableRealTimeChat": true,
    "EnableFileUpload": true,
    "EnableNotifications": true,
    "EnableKPI": true,
    "EnableCommission": true,
    "EnableDisputes": true
  },
  "CORS": {
    "AllowedOrigins": [
      "http://localhost:3000",
      "http://localhost:3001",
      "https://yourdomain.com"
    ]
  },
  "HealthChecks": {
    "Database": true,
    "Redis": true,
    "Elasticsearch": true,
    "AIServices": true,
    "ExternalAPIs": true
  }
}