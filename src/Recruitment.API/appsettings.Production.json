{
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.AspNetCore.Hosting.Diagnostics": "Information"
    },
    "Serilog": {
      "MinimumLevel": {
        "Default": "Warning",
        "Override": {
          "Microsoft": "Warning",
          "System": "Warning"
        }
      },
      "WriteTo": [
        {
          "Name": "Console",
          "Args": {
            "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
          }
        },
        {
          "Name": "Elasticsearch",
          "Args": {
            "nodeUris": "http://elasticsearch:9200",
            "indexFormat": "recruitment-logs-{0:yyyy.MM.dd}",
            "batchPostingLimit": 50,
            "period": 2000
          }
        }
      ]
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=sql-server,1433;Database=Recruitment_Prod;User Id=recruitment_user;Password=YourStrongProdPassword;TrustServerCertificate=true;MultipleActiveResultSets=true;Connection Timeout=30;"
  },
  "JWT": {
    "Secret": "${JWT_SECRET}",
    "Issuer": "recruitment-platform-prod",
    "Audience": "recruitment-platform-users",
    "ExpiryMinutes": 30,
    "RefreshExpiryDays": 7
  },
  "Redis": {
    "ConnectionString": "redis-cluster:6379",
    "InstanceName": "Recruitment:Prod:"
  },
  "MinIO": {
    "Endpoint": "minio:9000",
    "AccessKey": "${MINIO_ACCESS_KEY}",
    "SecretKey": "${MINIO_SECRET_KEY}",
    "BucketName": "recruitment-prod",
    "Secure": true
  },
  "RabbitMQ": {
    "Host": "rabbitmq-cluster",
    "Username": "${RABBITMQ_USERNAME}",
    "Password": "${RABBITMQ_PASSWORD}",
    "VirtualHost": "recruitment-prod"
  },
  "Elasticsearch": {
    "Url": "http://elasticsearch-cluster:9200",
    "IndexName": "recruitment-prod"
  },
  "AI": {
    "CVParser": {
      "BaseUrl": "http://ai-cv-parser:80",
      "TimeoutSeconds": 60
    },
    "JobMatcher": {
      "BaseUrl": "http://ai-job-matcher:80",
      "TimeoutSeconds": 60
    }
  },
  "Payments": {
    "BankApiUrl": "${BANK_API_URL}",
    "ApiKey": "${BANK_API_KEY}",
    "WebhookSecret": "${WEBHOOK_SECRET}",
    "SupportedBanks": [
      "Vietcombank",
      "Techcombank",
      "BIDV",
      "VietinBank",
      "ACB",
      "VPBank",
      "MBBank",
      "TPBank"
    ]
  },
  "Notifications": {
    "Firebase": {
      "ServerKey": "${FIREBASE_SERVER_KEY}",
      "ProjectId": "${FIREBASE_PROJECT_ID}"
    },
    "SMS": {
      "Provider": "Twilio",
      "AccountSid": "${TWILIO_ACCOUNT_SID}",
      "AuthToken": "${TWILIO_AUTH_TOKEN}",
      "FromNumber": "${TWILIO_PHONE_NUMBER}"
    },
    "Email": {
      "Provider": "SendGrid",
      "ApiKey": "${SENDGRID_API_KEY}",
      "FromEmail": "noreply@yourplatform.com",
      "FromName": "Recruitment Platform"
    }
  },
  "Security": {
    "EncryptionKey": "${ENCRYPTION_KEY}",
    "PasswordPolicy": {
      "MinLength": 12,
      "RequireUppercase": true,
      "RequireLowercase": true,
      "RequireNumbers": true,
      "RequireSpecialChars": true
    },
    "RateLimiting": {
      "LoginAttempts": 3,
      "WindowMinutes": 15,
      "LockoutMinutes": 60
    }
  },
  "Features": {
    "EnableAI": true,
    "EnableRealTimeChat": true,
    "EnableFileUpload": true,
    "EnableNotifications": true,
    "EnableKPI": true,
    "EnableCommission": true,
    "EnableDisputes": true
  },
  "CORS": {
    "AllowedOrigins": [
      "https://yourplatform.com",
      "https://app.yourplatform.com",
      "https://admin.yourplatform.com"
    ]
  },
  "HealthChecks": {
    "Database": true,
    "Redis": true,
    "Elasticsearch": true,
    "AIServices": true,
    "ExternalAPIs": true
  },
  "ApplicationInsights": {
    "ConnectionString": "${APPLICATION_INSIGHTS_CONNECTION_STRING}"
  },
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://*:80"
      }
    }
  }
}